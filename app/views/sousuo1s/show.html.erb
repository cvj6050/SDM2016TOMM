<h1>Search Result</h1>

<%if @sousuo1.sousuo1_books.empty?%>
<div class="alert-danger" >
<span style="padding-left:40%;margin-top:20px;font-size:30px">no result!!!</span>
</div>
<% else %>


<br>

 
    <table  class="table table-striped" style="width: 100%;">
  <thead>
    <tr >
      <th>Title</th>
      <th>Username</th>
      <th>Submitted date</th>
      <th>Paper status</th>
      <th>Moderated</th>
      <th>Moderated date</th>
      <th>Analysed</th>
      <th>Analysed date</th>
      <th>Authors</th>
      
      <th>Journal</th>
      <th>Publish year</th>
      <th>Publish volume</th>
      <th>Publish pages</th>
      <th>Publish month</th>
      <th>Credibility rate</th>
      <th>Research metrix</th>
      <th>Research aim</th>
      <th>Research method</th>
      <th>Participant</th>
        <th>Show</th>
      <th colspan="3"></th>
    
    </tr>
  </thead>

  <tbody>
    <% @sousuo1.sousuo1_books.each do|book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.username %></td>
        <td><%= book.submitted_date %></td>
        <td><%= book.paper_status %></td>
        <td><%= book.moderated_id %></td>
        <td><%= book.moderated_date %></td>
        <td><%= book.analysed_id %></td>
        <td><%= book.analysed_date %></td>
        <td><%= book.authors %></td>
        
        <td><%= book.journal %></td>
        <td><%= book.publish_year %></td>
        <td><%= book.publish_volume %></td>
        <td><%= book.publish_pages %></td>
        <td><%= book.publish_month %></td>
        <td><%= book.credibility_rate %></td>
        <td><%= book.research_metrix %></td>
        <td><%= book.research_aim %></td>
        <td><%= book.research_method %></td>
        <td><%= book.participant %></td>
        <td><%= link_to 'Show', book %>
        <%= link_to 'Edit', edit_book_path(book) %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%end%>
    <ul class="pager">
    <li><%= link_to 'Back',new_sousuo1_path%></li></ul>