 </head>
 
  <% if @paperpost.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@paperpost.errors.count, "error") %> prohibited this paperpost from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @paperpost.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%=f.error_span(:username) %>
  </div>
  
  
  
  <!-- Trying dynamically -->
  <div class="form-group">
  <%= f.label :articlecategory, :class => 'control-label col-lg-2' %>
      <div class="col-xs-5"">
  <%= f.select :articlecategory, [[ "Books","Books"], ["Articles", "Articles"], ["Magazines", "Magazines"]], { label: "Choose your Journal Category:" }, { class: "selectpicker" } %>
        </div>
  </div>
  
  
  <div class="form-group">
    <%= f.label :author, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :author, :class => 'form-control' %>
    </div>
    <%=f.error_span(:author) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  
  <div style='display:none;' id='business'>
     <div class="form-group has-success has-feedback">
     <div class="form-group">
    <%= f.label :journalname, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5">
      <%= f.text_field :journalname , :id => 'inputSuccess', :class => 'form-control' %>
    </div>
    <%=f.error_span(:journalname) %>
    </div>
  </div>
  </div>
  
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :publishername, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :publishername, :class => 'form-control' %>
    </div>
    <%=f.error_span(:publishername) %>
  </div>
  <div class="form-group">
    <%= f.label :pages, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :pages, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pages) %>
  </div>
  <div class="form-group">
    <%= f.label :volume, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :volume, :class => 'form-control' %>
    </div>
    <%=f.error_span(:volume) %>
  </div>
  
  <div class="form-group">
    <%= f.label :publish_date, :class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :publish_date, "data-provide" => 'datepicker' %>
    </div>
    <%=f.error_span(:publish_date) %>
  </div>
  <div class="form-group">
    <%= f.label :submitted_date ,:class => 'control-label col-lg-2' %>
    <div class="col-xs-5"">
      <%= f.text_field :submitted_date, "data-provide" => 'datepicker' %>
    </div>
    <%=f.error_span(:submitted_date) %>
  </div>
 

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit_tag 'Save as Draft', name: "commit", value: "draft", :class => "btn btn-default"%>
      <%= f.submit_tag "Publish", name: "commit", value: "publish" , :class => 'btn btn-success' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                paperposts_path, :class => 'btn btn-default' %>
    </div>
  </div>
  

<% end %>
