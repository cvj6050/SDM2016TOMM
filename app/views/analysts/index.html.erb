<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Analysts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!--<th><%= model_class.human_attribute_name(:research_method) %></th> -->
      <!--<th><%= model_class.human_attribute_name(:reseach_participants) %></th> -->
      <th><%= model_class.human_attribute_name(:context) %></th>
      <th><%= model_class.human_attribute_name(:se_method) %></th>
      <!--<th><%= model_class.human_attribute_name(:se_methodology) %></th>-->
      <th><%= model_class.human_attribute_name(:submitted_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th>Research method</th>
      <th>reseach participants</th>
      <th>benefit from test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @analysts.each do |analyst| %>
      <tr>
        <td><%= analyst.research_method %></td>
        <td><%= analyst.reseach_participants %></td>
        <td><%= analyst.benefit_from_test %></td>
        <!--<td><%= link_to 'Show', analyst %></td>-->
        <!--<td><%= link_to 'Edit', edit_analyst_path(analyst) %></td>-->
        <!--<td><%= link_to 'Destroy', analyst, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_analyst_path(analyst), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      analyst_path(analyst),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_analyst_path,
            :class => 'btn btn-success' %>


